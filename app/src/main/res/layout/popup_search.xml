<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pop_stat_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/popupBackground"
              android:orientation="vertical"
              android:padding="16dp">


    <TextView
        android:id="@+id/pop_stat_board_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_for_a_board"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/pop_search_board_name"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/pop_search_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/search"
            android:textColor="@color/textColor"/>
    </LinearLayout>

</LinearLayout>
