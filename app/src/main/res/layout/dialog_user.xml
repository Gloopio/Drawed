<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pop_stat_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/popupBackground"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
        android:id="@+id/dialog_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_username"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_user_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/cancel"
            android:textColor="@color/textColor"/>

        <Button
            android:id="@+id/dialog_user_btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/logout"
            android:textColor="@color/textColor"/>
    </LinearLayout>

</LinearLayout>
