<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pop_stat_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/popupBackground"
              android:orientation="vertical"
              android:padding="16dp">


    <TextView
        android:id="@+id/dialog_info_board_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_boardname"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="26dp">

        <Switch
            android:id="@+id/dialog_info_switch_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_label"
            android:textColor="@color/textColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/only_approved_drawers_can_view_this_board"
            android:textColor="@color/textColor"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <Switch
            android:id="@+id/dialog_info_switch_freeze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/freeze"
            android:textColor="@color/textColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/only_i_can_edit_this_board"
            android:textColor="@color/textColor"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_info_btn_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:background="@drawable/button"
            android:text="@string/share"
            android:textColor="@color/textColor"/>

        <ImageButton
            android:id="@+id/dialog_info_btn_qr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_qr_code"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/delete"
            android:textColor="@color/textColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_info_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/close"
            android:textColor="@color/textColor"/>

        <Button
            android:id="@+id/dialog_info_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="@string/delete"
            android:textColor="@color/textColor"/>
    </LinearLayout>

</LinearLayout>
